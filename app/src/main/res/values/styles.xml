<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--透明Dialog-->
    <style name="BaseDialogFragment" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CustomDialogFragment">
        <item name="android:background">@drawable/shape_dlg_draggable</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="CustomDialogIcon_L">
        <item name="android:background">@drawable/selector_custom_dialog_icon_bk_l</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="IvGdpSwipeIcon">
        <item name="android:layout_width">@dimen/actionbar_icon_width</item>
        <item name="android:layout_height">@dimen/actionbar_icon_width</item>
        <item name="android:padding">@dimen/actionbar_icon_padding</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="StarListTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#eeeeee</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="StarListTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/white_bg</item>
        <item name="colorPrimaryDark">@color/white_bg</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#eeeeee</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="StarListTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="ActionbarIcon_L">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">@dimen/actionbar_icon_padding</item>
    </style>

    <style name="ActionbarCloseIcon">
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:paddingTop">@dimen/actionbar_padding</item>
        <item name="android:paddingBottom">@dimen/actionbar_padding</item>
    </style>

    <style name="GroupWhiteSecOnBg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="TvDlgVideoAction">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/video_actionbar_text_padding</item>
        <item name="android:paddingRight">@dimen/video_actionbar_text_padding</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="IvTransDialogAction">
        <item name="android:layout_width">@dimen/actionbar_icon_width</item>
        <item name="android:layout_height">@dimen/actionbar_icon_width</item>
        <item name="android:padding">@dimen/actionbar_padding</item>
        <item name="android:background">@drawable/ripple_fullscreen_bk</item>
    </style>

    <style name="GdbRecommendDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="GdbRecommendFilterCheck">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="GdbRecommendFilterEdit">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="GdbHomeStarGroup">
        <item name="android:layout_width">@dimen/gdb_home_star_size</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GdbHomeStarImage">
        <item name="android:layout_width">@dimen/gdb_home_star_size</item>
        <item name="android:layout_height">@dimen/gdb_home_star_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="GdbHomeStarText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="GdbRecommendActionIcon">
        <item name="android:layout_width">@dimen/gdb_recommend_action_size</item>
        <item name="android:layout_height">@dimen/gdb_recommend_action_size</item>
        <item name="android:padding">@dimen/gdb_recommend_action_padding</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="BaseTransDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/loading_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="LoadingDialog" parent="BaseTransDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="IvPadActionIcon">
        <item name="android:layout_width">@dimen/actionbar_height</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:padding">20dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="TvHomePadIconOval">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TvPadActionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TvStarTag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@drawable/selector_star_tag_text</item>
        <item name="android:background">@drawable/selector_star_tag_bg</item>
    </style>

    <style name="TvFilterTag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_filter_tag</item>
        <item name="android:textColor">@drawable/selector_filter_tag_text</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="TvPlayerStarTitle">
        <item name="android:layout_width">@dimen/rating_title_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/rating_margin_hor</item>
        <item name="android:textSize">@dimen/rating_title_size</item>
    </style>

    <style name="TvPlayerStarValue">
        <item name="android:layout_width">@dimen/rating_value_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/rating_title_size</item>
    </style>

    <style name="GroupPlayerStar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/rating_item_top</item>
    </style>

    <style name="TvStarRating">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/shape_oval_index</item>
    </style>

    <style name="TvStarRatingNoWH">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/shape_oval_index</item>
    </style>

    <style name="EtActionSearch" parent="AppTheme">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
</resources>
