<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="@dimen/actionbar_height"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/group_star">
    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/iv_star"
        android:layout_width="@dimen/actionbar_height"
        android:layout_height="@dimen/actionbar_height"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_def_person" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="120dp"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iv_star"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#dfdfdf"
            android:textSize="18dp"
            android:text="Robbie Rojo" />
        <TextView
            android:id="@+id/tv_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:textColor="#dfdfdf"
            android:text="top(98/24)" />

    </LinearLayout>
</RelativeLayout>