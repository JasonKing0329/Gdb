<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="@dimen/gdb_record_listitem_img_width"
            android:layout_height="@dimen/gdb_record_listitem_img_height"
            android:id="@+id/group_record"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/gdb_record_listitem_img_width"
                android:layout_height="@dimen/gdb_record_listitem_img_height"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:id="@+id/group_file_info"
                android:layout_width="@dimen/gdb_record_listitem_img_width"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_image"
                android:layout_alignLeft="@id/iv_image"
                android:orientation="vertical"
                android:background="#66000000"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_stars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="12dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="@dimen/gdb_list_icon_play_size"
                android:layout_height="@dimen/gdb_list_icon_play_size"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:padding="@dimen/gdb_list_icon_play_padding"
                android:src="@drawable/ic_play_arrow_white_36dp"
                android:background="@drawable/shape_oval_transgrey"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/tv_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="473"
                android:textSize="16dp"
                android:textColor="@color/actionbar_bk_blue"
                android:layout_above="@id/group_file_info"/>

            <TextView
                android:id="@+id/tv_seq"
                android:layout_width="@dimen/gdb_record_seq_width"
                android:layout_height="@dimen/gdb_record_seq_width"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/gdb_shape_list_no"
                android:textColor="@color/white"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>