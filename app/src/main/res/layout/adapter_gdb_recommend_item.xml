<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/gdb_recommend_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />
    <RelativeLayout
        android:id="@+id/gdb_recommend_click_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gdb_recommend_action_size"
        android:layout_alignBottom="@id/gdb_recommend_image"
        android:background="@color/gdb_float_infor_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:id="@+id/gdb_recommend_star"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"/>
    </RelativeLayout>

</RelativeLayout>